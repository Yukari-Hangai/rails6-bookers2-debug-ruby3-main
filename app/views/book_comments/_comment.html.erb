<% book.book_comments.each do |book_comment| %>
  <div><%= link_to user_path(book_comment.user) do %>
         <%= image_tag book_comment.user.get_profile_image(50, 50) %><br>
         <%= book_comment.user.name %>
       <% end %>
       <%= book_comment.comment %>
       <% if book_comment.user == current_user %>
        <%= link_to 'Destroy', book_book_comment_path(book, book_comment), method: :delete, remote: true, class: "btn btn-sm btn-danger" %>
       <% end %>
  </div>
<% end %>
<%= form_with model: [book, book_comment], local: false do |f| %>
  <div class = "text">
   <%= f.text_area :comment, class: 'form-control' %>
  </div>
  <%= f.submit "送信" %>
<% end %>
